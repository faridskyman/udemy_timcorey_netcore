@page
@model RPDemoApp.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Order is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
<div class="h4">
    Are you sure you want to delete this Order that was placed on @Model.Order.OrderDate?
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Order Name</th>
            <th>Quantity</th>
            <th>Order Total</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Order.OrderName</td>
            <td>@Model.Order.Quantity</td>
            <td>@string.Format("{0:C}",Model.Order.Total)</td>
        </tr>
    </tbody>
</table>



<form method="post">
    <input asp-for="Id" value="@Model.Order.Id" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Delete Order" class="btn btn-danger"/>
    </div>
</form>    


}